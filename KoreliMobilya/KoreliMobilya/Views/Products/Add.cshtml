
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Model Ekleme</h1>

@model ProductViewModel




<form asp-controller="Products" asp-action="Add" method="post" enctype="multipart/form-data">
@*    Backende Tarafında veri yakalamak için name ,JavaScript tarafında veri yakalamak için id kullanıyoruz*@   
    <div class="mb-3">
        <label as-for="Name" class="form-label">Model İsmi </label>
        <input class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.categorySelect">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3">
        <select class="form-select" asp-for="CategoryName" asp-items="@ViewBag.categorySelect">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryName"></span>
    </div>

    <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image" type="file">
    </div>
    <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image2" type="file">
    </div>
    <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image3" type="file">
    </div>
    <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image7" type="file">
    </div>

    <div class="mb-3">
        <select class="form-select" asp-for="Link" asp-items="@ViewBag.LinkSelect">
            <option value="">Takım Kategorisini Seçiniz</option>
        </select>
    </div>

@*    sunucuya değerin gitmesi için mutlaka type submit olmak zorunda*@   
    <button class="btn btn-primary mb-3" type="submit">Ürün Kaydet</button>
</form>


