
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Ürün Güncelleme</h1>

@model ProductUpdateViewModel

<form asp-controller="Products" asp-action="Update" asp-route-productId="@Model.Id" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImagePath" />
    <input type="hidden" asp-for="ImagePath2" />
    <input type="hidden" asp-for="ImagePath3" />
    <input type="hidden" asp-for="ImagePath7" />

    <div >
        <img class="d-inline-block" style="width:100px; height:100px" src="@(String.IsNullOrEmpty(Model.ImagePath)? "/Images/dolap.jpg" :"/Images/"+Model.ImagePath)" />
    </div>
    <div>
        <img style="width:100px; height:100px" src="@(String.IsNullOrEmpty(Model.ImagePath2)? "/Images/dolap.jpg" :"/Images/"+Model.ImagePath2)" />
    </div>
    <div>
        <img style="width:100px; height:100px" src="@(String.IsNullOrEmpty(Model.ImagePath3)? "/Images/dolap.jpg" :"/Images/"+Model.ImagePath3)" />
    </div>
    <div>
        <img style="width:100px; height:100px" src="@(String.IsNullOrEmpty(Model.ImagePath7)? "/Images/dolap.jpg" :"/Images/"+Model.ImagePath7)" />
    </div>

    <div class="mb-3">
        <label as-for="Name" class="form-label">Model İsmi :</label>
        <input class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.categorySelect">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3">
        <select class="form-select" asp-for="CategoryName" asp-items="@ViewBag.categorySelect">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryName"></span>
    </div>


       <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image" type="file">
    </div>
       <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image2" type="file">
    </div>
       <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image3" type="file">
    </div>
    <div class="mb-3">
        <label for="formFileLg" class="form-label">Ürün Resim   </label>
        <input class="form-control form-control-lg" asp-for="Image7" type="file">
    </div>
    <div class="mb-3">
        <select class="form-select" asp-for="Link" asp-items="@ViewBag.LinkSelect">
            <option value="">Takım Adını Seçiniz</option>
        </select>
    </div>
    <button class="btn btn-primary type="submit">Ürün Güncelleme</button>

</form>



@section Scripts
    {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}