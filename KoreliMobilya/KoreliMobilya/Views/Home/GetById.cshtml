@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_layout2.cshtml";
}


@model ProductViewModel




<div  class="row justify-content-center card">
    <div class="card-header border-bottom border-5">
        <div class="fs-2"> @Model.Name</div>
    </div>
    <div class="card-body ">

    <div id="carouselExampleIndicators" class="carousel position-relative slide col-lg-10 mx-auto px-5">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner" >
            
            <div class="carousel-item active">
                    <img src="~/Images/@Model.ImagePath" class="d-block w-100 h-100 rounded-5" alt="...">
            </div>
            <div class="carousel-item">
                    <img src="~/Images/@Model.ImagePath2" class="d-block w-100 h-100 rounded-5" alt="...">
            </div>
            <div class="carousel-item">
                    <img src="~/Images/@Model.ImagePath3" class="d-block w-100 h-100 rounded-5" alt="...">
            </div>  
              <div class="carousel-item">
                    <img src="~/Images/@Model.ImagePath7" class="d-block w-100 h-100 rounded-5" alt="...">
            </div>
        </div>
        <button class=" bg-white border-0 position-absolute bg-opacity-10 top-50 start-10" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon   text-black" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
            <button class="next " type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon text-black" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
    <a class="btn btn-dark  p-2 " asp-controller="home" asp-action="@Model.Link"> Ürünlere Geri Dön</a>
</div>




