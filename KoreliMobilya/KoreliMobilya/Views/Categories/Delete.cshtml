@model KoreliMobilyaDeneme.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Kategori Sil</h1>


<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Kategori Adı:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        
    <a class="text-decoration-underline" asp-controller="categories" asp-action="Index">Kategoi Kontrol Paneline Dön</a>
    </form>
</div>
