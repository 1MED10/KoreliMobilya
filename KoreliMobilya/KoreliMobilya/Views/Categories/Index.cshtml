@model IEnumerable<KoreliMobilyaDeneme.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Kategori Kontrol Paneli</h1>

<div class="row mt-5">
    <div class="col-3">
        <div id="list-example" class="list-group">
            <a class="list-group-item list-group-item-action" asp-controller="products" asp-action="index">Ürün Kontrol Paneli</a>
            <a class="list-group-item list-group-item-action" asp-controller="categories" asp-action="index">Kategori Kontrol Paneli</a>
            <a class="list-group-item list-group-item-action" asp-controller="banners" asp-action="index">Banner Kontrol Paneli</a>
        </div>
    </div>
    <div class="col-9">
        <p>
            <a class="btn btn-primary mb-3" asp-action="Create">Kategori Ekle</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>
                        Kategoriler
                    </th>
                    <th>
                        Kategori Resmi
                    </th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                         <td>
                           @if (!string.IsNullOrEmpty(item.ImagePath5))
                                  {
                                 <img style="width:100px; height:100px" src="/Images/@(item.ImagePath5)" />
                             }
                        </td>
                       <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td>
                            <a class="btn btn-primary " asp-action="Delete" asp-route-id="@item.Id">SİL</a>
                            <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.Id">GÜNCELLE</a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
</div>


